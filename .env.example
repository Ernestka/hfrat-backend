# Flask configuration
# Options: development, production, testing
FLASK_ENV=development
FLASK_APP=run.py

# Server Port (Heroku/Render provides PORT automatically in production)
PORT=5000

# Secrets (REQUIRED in production - generate strong random keys)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=local-dev-secret-change-in-production
JWT_SECRET_KEY=local-jwt-secret-change-in-production

# Database (SQLite for dev; PostgreSQL for production)
# Heroku/Render will provide DATABASE_URL automatically
DATABASE_URL=sqlite:///hfrat.db
# DATABASE_URL=postgresql://username:password@localhost:5432/hfrat

# Admin seed defaults (for initial setup only)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=StrongPass123!

# CORS - Comma-separated list of allowed frontend origins
# Add your deployed frontend URL here
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174
